{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../DbLocator",
          "files": [
            "**/*.csproj",
            "**/*.xml"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "properties": {
        "TargetFramework": "net9.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}",
          "!**/bin/**",
          "!**/obj/**"
        ],
        "exclude": [
          "_site/**",
          "**/bin/**",
          "**/obj/**"
        ]
      },
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "DbLocator",
      "_appTitle": "DbLocator Documentation",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_disableContribution": true,
      "_lang": "en-us",
      "pdf": true
    },
    "fileMetadata": {
      "**/*.yml": {
        "YamlMime": "TableOfContent"
      }
    }
  }
}